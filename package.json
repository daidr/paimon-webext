{
  "name": "paimon-webext",
  "displayName": "派蒙 Paimon",
  "version": "0.1.5",
  "description": "在浏览器中实时查看原神游戏状态 Track Genshin Impact stats in your browser.",
  "author": {
    "name": "daidr",
    "url": "https://daidr.me"
  },
  "packageManager": "pnpm@7.8.0",
  "homepage": "https://github.com/daidr/paimon-webext",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "dev:bg": "tsup --watch ./src",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:js build:bg modify:firefox",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "build:bg": "tsup",
    "modify:firefox": "esno scripts/modify_firefox.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop --firefox-preview",
    "clear": "rimraf extension/**/* extension.*",
    "lint": "eslint src/**/*.{json,ts,js,vue}"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.23.1",
    "@ffflorian/jszip-cli": "^3.1.6",
    "@iconify/json": "^2.1.106",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.35",
    "@types/webextension-polyfill": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/compiler-sfc": "^3.2.39",
    "@vueuse/core": "^8.5.0",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.24.0",
    "esno": "^0.16.3",
    "fs-extra": "^10.1.0",
    "kolorist": "^1.6.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.55.0",
    "tsup": "^5.12.8",
    "typescript": "^4.8.3",
    "unplugin-auto-import": "^0.7.2",
    "unplugin-icons": "^0.14.3",
    "unplugin-vue-components": "^0.19.5",
    "vite": "^2.9.9",
    "vite-plugin-windicss": "^1.8.8",
    "vue": "^3.2.39",
    "web-ext": "^7.2.0",
    "webext-bridge": "^5.0.5",
    "webextension-polyfill": "^0.10.0"
  }
}